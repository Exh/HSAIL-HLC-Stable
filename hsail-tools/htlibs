LIBHSAIL_DEPTH = $(HT_DEPTH)/libHSAIL
LIBBRIGDWARF_DEPTH = $(HT_DEPTH)/libBRIGdwarf

LIBBRIGDWARF_ELFUTILS ?= $(HT_DEPTH)/../lib/loaders/elf/utils

LIBHSAIL_INCS = $(INCSWITCH) "$(LIBHSAIL_DEPTH)" \
                $(INCSWITCH) "$(LIBHSAIL_DEPTH)/$(FULL_BUILD_DIR)"

LIBBRIGDWARF_INCS = $(INCSWITCH) "$(LIBBRIGDWARF_DEPTH)"

LIBBRIGDWARF_LIBELF_INCS = \
          $(INCSWITCH) "$(LIBBRIGDWARF_ELFUTILS)/libelf" \
          $(INCSWITCH) "$(LIBBRIGDWARF_ELFUTILS)/common"

LIBBRIGDWARF_LIBDWARF_INCS = $(INCSWITCH) "$(LIBBRIGDWARF_DEPTH)/libdwarf/src"

ASMHSAILLIB     = $(LIBHSAIL_DEPTH)/$(FULL_BUILD_DIR)/LIBHSAIL$(LIB_EXT)
ASMBRIGDWARFLIB = $(LIBBRIGDWARF_DEPTH)/$(FULL_BUILD_DIR)/libBRIGdwarf$(LIB_EXT)
ASMDWARFLIB     = $(LIBBRIGDWARF_DEPTH)/libdwarf/$(FULL_BUILD_DIR)/libdwarf$(LIB_EXT)
ASMELFLIB       = $(OPENCL_DEPTH)/compiler/lib/loaders/elf/utils/libelf/$(FULL_BUILD_DIR)/libelf$(LIB_EXT)

ASMBRIGDWARFLIBS = $(ASMBRIGDWARFLIB) $(ASMDWARFLIB) $(ASMELFLIB)
